<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="409dp"
        android:layout_height="559dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="409dp"
            android:layout_height="122dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/tableRow2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/button12"
                android:layout_width="68dp"
                android:layout_height="122dp"
                android:onClick="operatorEvent"
                android:text="+" />

            <Button
                android:id="@+id/button13"
                android:layout_width="68dp"
                android:layout_height="122dp"
                android:onClick="operatorEvent"
                android:text="-" />

            <Button
                android:id="@+id/button15"
                android:layout_width="68dp"
                android:layout_height="122dp"
                android:onClick="operatorEvent"
                android:text="*" />

            <Button
                android:id="@+id/button14"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:onClick="operatorEvent"
                android:text="/" />

            <Button
                android:id="@+id/limpiar"
                android:layout_width="134dp"
                android:layout_height="122dp"
                android:onClick="Limpiar_num"
                android:text="LIMPIAR" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="405dp"
            android:layout_height="102dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/tableRow3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/button3"
                android:layout_width="135dp"
                android:layout_height="99dp"
                android:onClick="numberEvent"
                android:text="7" />

            <Button
                android:id="@+id/button6"
                android:layout_width="135dp"
                android:layout_height="99dp"
                android:onClick="numberEvent"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                android:layout_width="135dp"
                android:layout_height="99dp"
                android:onClick="numberEvent"
                android:text="9" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="408dp"
            android:layout_height="103dp"
            app:layout_constraintBottom_toTopOf="@+id/tableRow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="136dp"
                android:layout_height="100dp"
                android:onClick="numberEvent"
                android:text="4" />

            <Button
                android:id="@+id/button7"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:onClick="numberEvent"
                android:text="5" />

            <Button
                android:id="@+id/button10"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:onClick="numberEvent"
                android:text="6" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="406dp"
            android:layout_height="98dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintBottom_toTopOf="@+id/tableRow4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/button5"
                android:layout_width="136dp"
                android:layout_height="100dp"
                android:onClick="numberEvent"
                android:text="1" />

            <Button
                android:id="@+id/dos"
                android:layout_width="136dp"
                android:layout_height="100dp"
                android:onClick="numberEvent"
                android:text="2" />

            <Button
                android:id="@+id/button11"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:onClick="numberEvent"
                android:text="3" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="404dp"
            android:layout_height="101dp"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/button17"
                android:layout_width="136dp"
                android:layout_height="101dp"
                android:onClick="numberEvent"
                android:text="." />

            <Button
                android:id="@+id/button16"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:onClick="numberEvent"
                android:text="0" />

            <Button
                android:id="@+id/button18"
                android:layout_width="134dp"
                android:layout_height="101dp"
                android:onClick="equalEvent"
                android:text="=" />
        </TableRow>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="409dp"
        android:layout_height="182dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow6">

        <TextView
            android:id="@+id/textViewResul"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="end"
            android:singleLine="true"
            android:text="0"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="412dp"
        android:layout_height="101dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="324dp"
            android:layout_height="84dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="44dp"
            android:text="TextView" />

    </TableRow>


</androidx.constraintlayout.widget.ConstraintLayout>